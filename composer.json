{
    "name": "gmponos/http-message-util",
    "type": "library",
    "description": "A set of utilities for manipulating PSR-7 HTTP Requests/Responses",
    "keywords": [
        "utility",
        "request",
        "response",
        "HTTP Message",
        "psr7",
        "http"
    ],
    "homepage": "https://github.com/gmponos/http-message-util",
    "license": "MIT",
    "authors": [
        {
            "name": "George Mponos",
            "email": "gmponos@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "guzzlehttp/psr7": "^1.5",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "HttpMessageUtil\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\HttpMessageUtil\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "phpcs": "php vendor/bin/phpcs ./src ./tests",
        "phpcbf": "php vendor/bin/phpcbf ./src ./tests"
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    }
}
