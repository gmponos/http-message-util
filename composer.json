{
    "name": "http-message-util/http-message-util",
    "description": "A set o utilities for manipulating PSR-7 HTTP Requests/Responses",
    "license": "MIT",
    "authors": [
        {
            "name": "George Mponos",
            "email": "gmponos@gmail.com"
        }
    ],
    "require": {
        "php": "7.1",
        "psr/http-message": "^1.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "HttpMessageUtil\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "phpcs": "php vendor/bin/phpcs ./src ./tests",
        "phpcbf": "php vendor/bin/phpcbf ./src ./tests"
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    }
}
